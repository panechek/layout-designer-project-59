.d-flex.flex-column.p-5.hide-scroll.h-100
    each message in messages
        if message.author
            .d-flex.align-items-end.mb-3 
                img(src=message.author.avatar, alt="avatar").avatar.me-3
                .bg-light.p-4.radius.message-width
                    p.fw-bold.text-dark= message.author.name
                    p.text-dark.border-bottom.pb-2.mb-2= message.text
                    p.small.text-dark= message.time
        else
            .d-flex.align-items-end.mb-3.align-self-end
                img(src="/images/avatar_1.jpg", alt="avatar").avatar.me-3
                .bg-primary.p-4.radius.message-width
                    p.text-light.border-bottom.pb-2.mb-2= message.text
                    p.small.text-light= message.time

        
            
                